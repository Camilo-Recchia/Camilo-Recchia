package ejercicio5;
import java.util.Scanner;
public class Ejercicio5 {

	public static void main(String[] args) {
		
		Scanner teclado = new Scanner(System.in);
		
		int num1,num2,calculo,resultado=0;
		
		System.out.print("Introduzca el valor 1: ");
		num1 = teclado.nextInt();
		System.out.print("Introduzca el valor 2: ");
		num2 = teclado.nextInt();
		
		System.out.print("Indique la operación que quiere realizar (Inserte un número):\n\n(1) Suma\n\n(2) Resta\n\n(3) Multiplicación\n\n(4) División\n\nNúmero: ");
		calculo = teclado.nextInt();
		
		System.out.println("\n----------------------------------");
		
		switch(calculo) {
		
		case 1:
		resultado = num1 + num2;
		case 2:
		resultado = num1 - num2;
		case 3:
		resultado = num1 * num2;
		case 4:
		resultado = num1 / num2;
		}
		System.out.print("El resultado de su operación es "+resultado);
	}

}
