package ejercicio3;
	
import java.util.Scanner;

public class Ejercicio3 {

	public static void main(String[] args) {
		
		int edad;
		String nombre, apellidos;	//InicializaciÃ³n de variables
		
		Scanner teclado = new Scanner(System.in);
		
		System.out.print("Por favor introduzca su edad: ");
		edad = teclado.nextInt();
		
		if (edad>=18) {
		System.out.println("Intoduzca su nombre y apellidos: ");
		
		System.out.print("Nombre: ");
		nombre = teclado.nextLine();

		teclado.nextLine();

		System.out.print("Apellidos: ");
		apellidos = teclado.nextLine();
		
		
		System.out.println("\nNombre: "+nombre+"\nApellidos: "+apellidos+"\nEdad: "+edad+"\n\nUsted a sido admitido");
		
		
		} else {
			System.out.print("No tiene la edad requerida para realizar estos estudios.");
		}
	}

}
